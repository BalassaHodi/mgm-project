<launch>
    <!-- turtlebot3_gazebo with empty world -->
    <arg name="x_pose" default="1.0" />
    <arg name="y_pose" default="2.0" />
    <include file="$(find-pkg-share turtlebot3_gazebo)/launch/turtlebot3_world.launch.py">
        <arg name="use_sim_time" value="true" />
        <arg name="x_pose" value="$(var x_pose)" />
        <arg name="y_pose" value="$(var y_pose)" />
    </include>

    <!-- CUSTOM NODES -->
    <!-- TestNode -->
    <node pkg="occupancy_grid_mapper" exec="test_node" name="test_node" output="screen">
        <param name="use_sim_time" value="true" />
    </node>

    <!-- Scan process node  -->
    <node pkg="occupancy_grid_mapper" exec="process_scan" name="process_scan" output="screen">
        <param name="use_sim_time" value="true" />
    </node>

    <!-- GetExtremeValuesNode -->
    <!-- <node pkg="occupancy_grid_mapper" exec="get_extreme_values" name="get_ext_val"
    output="screen">
        <param name="use_sim_time" value="true" />
    </node> -->

</launch>